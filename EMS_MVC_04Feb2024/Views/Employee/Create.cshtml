@model EMS_MVC_04Feb2024.Models.Employee.EmployeeModel

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6 offset-3 mb-5">
            <div class="mt-3">
                <label class="form-label">Full Name</label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            </div>
            <div class="mt-3">

                <div class="form-check-inline">
                    <label class="form-label">Gender</label>
                    <div class="form-check-inline">
                        @Html.RadioButtonFor(x => x.Gender, "M", new { @class = "form-check-input" })
                        <label class="form-check-label" for="Gender">
                            Male
                        </label>
                    </div>
                    <div class="form-check-inline">
                        @Html.RadioButtonFor(x => x.Gender, "F", new { @class = "form-check-input" })
                        <label class="form-check-label" for="Gender">
                            Female
                        </label>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <label class="form-label">Mobile No.</label>
                @Html.TextBoxFor(x => x.ContactNo, new { @class = "form-control" })
            </div>

            <div class="mt-3">
                <label class="form-label">Email Address</label>
                @Html.TextBoxFor(x => x.EmailAddress, new { @class = "form-control" })
            </div>
            <div class="mt-3">
                <label class="form-label">DOJ</label>
                @Html.TextBoxFor(x => x.DOJ, new { @class = "form-control", type = "date" })
            </div>

            <div class="mt-3">
                <label class="form-label">Salary</label>
                @Html.TextBoxFor(x => x.Salary, new { @class = "form-control" })
            </div>

            <div class="mt-3">
                <label class="form-label">Select Department</label>
                @*@Html.DropDownListFor(x => x.DepartmentId,
          new List<SelectListItem>() {
          new SelectListItem(){Text = "HR",Value="1"},
          new SelectListItem(){Text = "Admin",Value="2"},
          new SelectListItem(){Text = "Pay Roll",Value="3"},
          new SelectListItem(){Text = "Manager",Value="4"},
          },
          "Select Department"
        ,new { @class = "form-control" })*@
                @Html.DropDownListFor(x => x.DepartmentId,Model.Departments,
                "Select Department"
              , new { @class = "form-control" })
            </div>

            <div class="mt-3">
                <label class="form-label">Bank A/C.</label>
                @Html.TextBoxFor(x => x.BankAccountNo, new { @class = "form-control" })
            </div>

            <div class="mt-3">
                <label class="form-label">Profile Image</label>
                @Html.TextBoxFor(x => x.ImageFile, new { @class = "form-control", type = "file" })
            </div>

            <div class="mt-3">
                <input type="submit" class="btn btn-primary" value="Save" />
                <input type="reset" class="btn btn-danger" value="Clear" />
            </div>
        </div>
    </div>
</form>

